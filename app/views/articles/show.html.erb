<h2><%= @article.title %></h2>
<p>Tags:
	<% @article.tags.each do |tag| %>
		<%= link_to tag.name, tag_path(tag) %>
	<% end %>
</p>

<% @article.attachments.each do |attachment| %>
	<p><%= image_tag attachment.image.url(:thumb) %><%= image_tag attachment.image.url(:medium) %></p>
<% end %>
<p><%= simple_format(@article.body) %></p>

<p>
	<%= link_to "delete", article_path(@article), method: :delete, data: {confirm: "Delete post?"} %> 
</p>
<p>
	<%= link_to "edit", edit_article_path(@article) %> 
</p>
